<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:background="#f1f1f1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:layout_weight="0.4">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3">
                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/a4_scanner_logo"/>
                        <TextView
                            android:textSize="25sp"
                            android:textColor="#375a63"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Are You Exit?"
                            android:fontFamily="@font/roboto_medium"/>
                        <TextView
                            android:textSize="18sp"
                            android:textColor="#375a63"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Are you sure you want to quit this app?"
                            android:fontFamily="@font/roboto_regular"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7">
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/btnno"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:background="@drawable/btn_exit_no"
                                android:layout_width="120dp"
                                android:layout_height="35dp">
                                <TextView
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=" No, stay on"
                                    android:fontFamily="@font/roboto_bold"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:id="@+id/btnyes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:background="@drawable/btn_exit_no"
                                android:layout_width="120dp"
                                android:layout_height="35dp">
                                <TextView
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Yes, exit now"
                                    android:fontFamily="@font/roboto_medium"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/lin_rate"
                        android:background="@color/bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:src="@drawable/rate_star"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="left|center_vertical|center_horizontal|center"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25">
                            <TextView
                                android:textSize="22sp"
                                android:textColor="#ffffff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rate this app"
                                android:fontFamily="@font/roboto_medium"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="#ffffff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="How would you rate our service?"
                                android:fontFamily="@font/roboto_regular"/>
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.35">
                            <LinearLayout
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:background="@drawable/btn_exit_rate_now"
                                android:layout_width="90dp"
                                android:layout_height="30dp">
                                <TextView
                                    android:textSize="10sp"
                                    android:textColor="#000000"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RATE NOW"
                                    android:fontFamily="@font/roboto_bold"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:gravity="bottom|center_vertical|center_horizontal|center"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6">

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
